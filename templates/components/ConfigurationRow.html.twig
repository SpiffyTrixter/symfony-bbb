<tr id="configuration-{{ this.configuration.id }}">
    <td><a href="{{ path('app_configuration_load', {
            slug: this.configuration.slug,
            page: constant('App\\Service\\ConfigurationService::PAGE_SUMMARY')
        }) }}">{{ this.configuration.id }}</a></td>
    <td>
        <div class="col-2 text-truncate" style="max-width: 20rem; min-width: 20rem">
            {{ this.configuration.name }}
        </div>
    </td>
    <td>
        <div class="ratio ratio-16x9">
            <img src="{{ asset("build/images/configurator/types/#{this.configuration.type}.png") }}"
                 alt="{{ this.configuration.type }}" class="rounded">
        </div>
    </td>
    <td>
        <div class="ratio ratio-16x9">
            <div class="rounded text-center" style="background-color: {{ this.configuration.hexColor }}"
                {{ stimulus_controller('tooltip', {
                    title: this.configuration.hexColor,
                    placement: 'top'
                }) }}></div>
        </div>
    </td>
    <td>{{ this.configuration.createdAt|date('d.m.Y H:i:s') }}</td>
    <td>{{ this.configuration.updatedAt|date('d.m.Y H:i:s') }}</td>
    <td class="text-end">
        <a class="btn btn-primary" href="{{ path('app_configuration_load', {
            slug: this.configuration.slug
        }) }}">
            Edit
        </a>
        <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#{{ this.targetModalId }}"
                data-action="{{ path('app_configuration_delete', {
                    slug: this.configuration.slug
                }) }}">
            Delete
        </button>
    </td>
</tr>
