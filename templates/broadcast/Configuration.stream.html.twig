{% block create %}
    {% set modal = {
        id: 'deleteConfigurationModal',
        title: 'Delete Configuration',
        body: 'Are you sure you want to delete this configuration?',
        confirmButton: {
            label: 'Delete',
            class: 'btn-danger'
        },
        cancelButton: {
            label: 'Cancel',
            class: 'btn-secondary'
        }
    } %}

    <turbo-stream action="prepend" target="configuration-list">
        <template>
            {{ component('ConfigurationRow', {
                configuration: entity,
                targetModalId: modal.id
            }) }}
        </template>
    </turbo-stream>
{% endblock %}

{% block update %}
    {% set modal = {
        id: 'deleteConfigurationModal',
        title: 'Delete Configuration',
        body: 'Are you sure you want to delete this configuration?',
        confirmButton: {
            label: 'Delete',
            class: 'btn-danger'
        },
        cancelButton: {
            label: 'Cancel',
            class: 'btn-secondary'
        }
    } %}

    <turbo-stream action="update" target="configuration-{{ entity.id }}">
        <template>
            {{ component('ConfigurationRow', {
                configuration: entity,
                targetModalId: modal.id
            }) }}
        </template>
    </turbo-stream>
{% endblock %}

{% block remove %}
    <turbo-stream action="remove" target="configuration-{{ id }}"></turbo-stream>
{% endblock %}
