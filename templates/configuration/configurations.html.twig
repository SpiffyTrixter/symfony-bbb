{% extends 'base_w_header.html.twig' %}

{% set modal = {
    id: 'deleteConfigurationModal',
    title: 'Delete Configuration',
    message: 'Are you sure you want to delete this configuration?',
    confirmButton: {
        label: 'Delete',
        class: 'btn-danger'
    },
    cancelButton: {
        label: 'Cancel',
        class: 'btn-secondary'
    }
} %}

{% block title %}
    Configurations
{% endblock %}

{% block body %}
    <div {{ turbo_stream_listen('App\\Entity\\Configuration') }}></div>
    <div class="container">
        <div class="row">
            <div class="col-8" data-live-ignore>
                <h1>Configurations</h1>
            </div>
            <div class="col-4">
                {{ component('ConfigurationsTable') }}
            </div>
        </div>
        {{ component('AlertContainer') }}
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped">
                    <colgroup>
                        <col style="width: 10%">
                        <col style="width: 20%">
                        <col style="width: 10%">
                        <col style="width: 10%">
                        <col style="width: 15%">
                        <col style="width: 15%">
                        <col style="width: 20%">
                    </colgroup>
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Color</th>
                        <th>Created At</th>
                        <th>Updated At</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody id="configurations-list"></tbody>
                    <tfoot>
                    <tr>
                        <td colspan="7" class="text-center">
                            <a class="btn btn-success" href="{{ path('app_configuration_type') }}">
                                Create a new entry
                            </a>
                        </td>
                    </tr>
                    </tfoot>
                </table>
            </div>
            <div class="col-md-12">
                <div class="d-flex justify-content-between align-items-center">
                    <a class="btn btn-lg btn-primary" href="{{ path('app_index_index') }}">
                        Home
                    </a>
                    <div id="configurations-pager"></div>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn btn-lg btn-primary" href="{{ path('app_user_users') }}">
                            Users
                        </a>
                    {% else %}
                        <a class="btn btn-lg btn-primary" href="{{ path('app_user_index') }}">
                            Profile
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    {{ component('ConfirmModal', modal) }}
{% endblock %}
